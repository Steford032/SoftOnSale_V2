<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" type="text/css" href="~/css/MainPageStyle.css">
	<script src="~/js/SOS_JS.js" type="text/javascript"></script>
	<!--<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>-->
	<link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;500&display=swap" rel="stylesheet">
	<link rel="shortcut icon" href="#">
</head>
<body>

	<header>
		<div class="header-left">
			<div class="top-menu">

				<div class="unit logo">
					<img src="~/Images/gamepadRD.svg" class="logoImg" />
					<h1>Soft on Sale</h1>
				</div>

				<div class="unit platform">
					<div class="PC">
						<button type="button">
							<span></span>
							<img src="~/Images/pcLogoWhiten.png" alt="" width="60" height="60">
						</button>
					</div>

					<div class="XBOX">
						<button type="button">
							<span></span>
							<img src="~/Images/psLogo.png" alt="" width="60" height="60">
						</button>
					</div>

					<div class="PS">
						<button type="button">
							<span></span>
							<img src="~/Images/xboxLogo.png" alt="" width="60" height="60">
						</button>
					</div>
				</div>

				<div class="unit sale">
					Sale
				</div>

			</div>

			<div class="searchbar">
				<input id="search_input" type="text"
					   placeholder="Enter your searching request">
			</div>

		</div>

		<div class="header-right">
			Header right
		</div>

	</header>
	
	@RenderBody()

	<div class="sidebar left"></div>

	<div class="sidebar right"></div>

	<footer>
		<div class="footer info">
			<p>
				<b>Hotline number</b>
				<br>8-988-888-88-88
			</p>

			<p>
				<b>Our mail</b>
				<br>SoftOnSale@gmail.com
			</p>

			<p>
				<b>Our other social networks</b>
				<br>t.me/SoftOnTG
				<br>https://www.SoftOnInsta.com
			</p>
		</div>

		<div class="footer reviews">
			<h2>Reviews from our clients</h2>

			<p></p>

			<div class="review-form">
				<input id="review-input" type="text"
					   placeholder="Be the one to leave a review">
			</div>
		</div>

		<div class="footer add-info">
			<h2>Place for your ad</h2>
		</div>
	</footer>



</body>
</html>